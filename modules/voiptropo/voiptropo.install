<?php/** * Implementation of hook_requirements(). */function voiptropo_requirements($phase) {  $requirements = array();  if ($phase == 'runtime') {    if (!extension_loaded("curl")) {      $requirements['tropo_curl'] = array(        'value' => t('PHP curl not installed.'),        'severity' => REQUIREMENT_ERROR,        'description' => t("The VoIP Tropo module requires PHP Curl extension to be installed."),      );    }    else {      $requirements['tropo_curl'] = array(        'value' => t('PHP curl is installed.'),        'severity' => REQUIREMENT_OK,      );    }  }  $requirements['tropo_curl']['title'] = t('VoIP Tropo');  return $requirements;}