<?php/** * Implementation of hook_requirements(). */function voipplivo_requirements($phase) {  $requirements = array();  if ($phase == 'runtime') {    if (!extension_loaded("curl")) {      $requirements['plivo_curl'] = array(        'value' => t('PHP curl not installed.'),        'severity' => REQUIREMENT_ERROR,        'description' => t("The VoIP Plivo module requires PHP Curl extension to be installed."),      );    }    else {      $requirements['plivo_curl'] = array(        'value' => t('PHP curl is installed.'),        'severity' => REQUIREMENT_OK,      );    }  }  $requirements['plivo_curl']['title'] = t('VoIP Plivo');  return $requirements;}