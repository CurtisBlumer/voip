<?php/** * Implementation of hook_requirements(). */function voiptwilio_requirements($phase) {  $requirements = array();  if ($phase == 'runtime') {    if (!extension_loaded("curl")) {      $requirements['twilio_curl'] = array(        'value' => t('PHP curl not installed.'),        'severity' => REQUIREMENT_ERROR,        'description' => t("The VoIP Twilio module requires PHP Curl extension to be installed."),      );    }    else {      $requirements['twilio_curl'] = array(        'value' => t('PHP curl is installed.'),        'severity' => REQUIREMENT_OK,      );    }  }  $requirements['twilio_curl']['title'] = t('VoIP Twilio');  return $requirements;}